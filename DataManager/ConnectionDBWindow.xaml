<Window x:Class="DataManager.ConnectionDBWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataManager"
        mc:Ignorable="d"
        Title="Edit DB Connection String" Height="200" Width="500">
    <Grid>
        <StackPanel>
            <TextBlock Text="DB Connection String:" Margin="10"/>
            <TextBox Name="ConnectionStringTextBox" Margin="10" TextWrapping="Wrap"/>
            <Button Content="Save" Margin="10" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
